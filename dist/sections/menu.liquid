<div class="navbar-container">
  <nav class="navbar is-fixed-top" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <a class="navbar-item" href="{{ shop.secure_url }}">
        {{ shop.name }}
      </a>
      <a role="button" class="navbar-burger burger navbar-item-mobile" aria-label="menu" aria-expanded="false" data-target="primary_navbar">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>
    <div id="primary_navbar" class="navbar-menu">
      <div class="navbar-start">
        {% for link in linklists.main-menu.links %}
          {% assign child_list_handle = link.title | handleize %}
          {% if linklists[child_list_handle].links != blank %}
          <div class="navbar-item has-dropdown is-hoverable">
            <a href="{{ link.url }}" class="navbar-link">
              {{ link.title }}
            </a>
            <div class="navbar-dropdown">
            {% for childlink in linklists[child_list_handle].links %}
            
              <a class="navbar-item" href="{{ childlink.url }}">
                {{ childlink.title | escape }}
              </a>
            
            {% endfor %}
            </div>
          </div>
          {% else %}
          <a href="{{ link.url }}" class="navbar-item">
            {{ link.title }}
          </a>
          {% endif %}
        {% endfor %}
        </div>
      </div>
      <div class="navbar-end">
        <div class="navbar-item search-open">
          <i data-feather="search" aria-hidden="true" title="Search Store"> </i>
        </div>
        <a href="/cart" class="navbar-item">
          <i data-feather="shopping-bag" aria-hidden="true" title="Items in Cart"></i><span class="ml-1">{{ cart.item_count }}</span>
        </a>
      </div>
    </div>
  </nav>
</div>
{% schema %}
{
  "name": "Header",
  "settings": [
  {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ] 
}
{% endschema %}




