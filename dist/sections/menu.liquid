<div class="navbar-container{% if template.name == "index" %} navbar-container--absolute{% endif %}">
<div class="container">
  <nav class="navbar {% if template.name != "index" %} is-white{% endif %}" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <a class="navbar-item" href="{{ shop.secure_url }}">
        {{ shop.name }}
      </a>
      <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="primary_navbar">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>

    <div id="primary_navbar" class="navbar-menu">
      <div class="navbar-start">
        {% for link in linklists.main-menu.links %}
          {% assign child_list_handle = link.title | handleize %}
          {% if linklists[child_list_handle].links != blank %}
          <div class="navbar-item has-dropdown is-hoverable">
            <a href="{{ link.url }}" class="navbar-link">
              {{ link.title }}
            </a>
            <div class="navbar-dropdown">
            {% for childlink in linklists[child_list_handle].links %}
            
              <a class="navbar-item" href="{{ childlink.url }}">
                {{ childlink.title | escape }}
              </a>
            
            {% endfor %}
            </div>
          </div>
          {% else %}
          <a href="{{ link.url }}" class="navbar-item">
            {{ link.title }}
          </a>
          {% endif %}
        {% endfor %}
        </div>
      </div>
      
      <div class="navbar-end">
        <div class="navbar-item">
          <i data-feather="search" aria-hidden="true" title="Search Store"> </i>
        </div>
        <a href="/cart" class="navbar-item">
          <i data-feather="shopping-bag" aria-hidden="true" title="Items in Cart"></i><span class="ml-1">{{ cart.item_count }}</span>
        </a>
        {% comment %} <form class="d-flex" action="/search" method="get" role="search">
          <label for="Search-{{ section.id }}" class="d-none">
            {{ 'general.search.placeholder' | t }}
          </label>
          <input type="search" 
                name="q" 
                id="Search-{{ section.id }}" 
                value="{{ search.terms | escape }}" 
                placeholder="{{ 'general.search.placeholder' | t }}" 
                class="form-control mr-2" 
                aria-label="Search">
          <button class="btn btn-outline-success">        
            <span class="icon-fallback-text">{{ 'general.search.submit' | t }}</span>
          </button>
        </form> {% endcomment %}
      </div>
    </div>
  </nav>
</div>
</div>
{% schema %}
{
  "name": "Header",
  "settings": [
  {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ] 
}
{% endschema %}




